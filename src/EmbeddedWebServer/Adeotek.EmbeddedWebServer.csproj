<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <OutputType>Library</OutputType>
    <AssemblyName>Adeotek.EmbeddedWebServer</AssemblyName>
    <Title>Adeotek.EmbeddedWebServer</Title>
    <Description>A .Net Core embeddable web and websocket server</Description>
    <Product>AdeoTEK EmbeddedWebServer</Product>
    <Company>AdeoTEK Software SRL</Company>
    <Authors>George Benjamin-Schonberger</Authors>
    <Copyright>Copyright Â© AdeoTEK Software SRL 2021</Copyright>
    <AssemblyVersion>1.0.0.1</AssemblyVersion>
    <FileVersion>1.0.0.1</FileVersion>
    <Version>1.0.0</Version>
    <PackageId>Adeotek.EmbeddedWebServer</PackageId>
    <PackageTags>http,https,webserver,embedded,micro,websocket,server,ws,wss</PackageTags>
    <PackageProjectUrl>https://github.com/adeotek/YANCS/</PackageProjectUrl>
    <PackageLicense>https://github.com/adeotek/YANCS/blob/master/README.md</PackageLicense>
    <PackageIcon>PackageIcon.png</PackageIcon>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageVersion>1.0.0</PackageVersion>
    <RepositoryUrl>https://github.com/adeotek/YANCS/</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="5.0.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="NetCoreServer" Version="5.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Worker\Adeotek.Worker.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../LICENSE">
      <Pack>True</Pack>
      <PackagePath>/</PackagePath>
    </None>
    <None Include="../../assets/PackageIcon.png">
      <Pack>True</Pack>
      <PackagePath>/</PackagePath>
    </None>
  </ItemGroup>

</Project>
